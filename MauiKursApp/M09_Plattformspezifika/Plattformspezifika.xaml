<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiKursApp.Plattformspezifika.Plattformspezifika"
             Title="Plattformspezifika">
    <VerticalStackLayout>
        <Label 
            Text="{OnPlatform Default=DEFAULT, Android=ANDROID, WinUI=WINDOWS, iOS=IOS}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            BackgroundColor="{OnIdiom Default=Green, Tablet=Blue, Phone=Red}"/>
        <Label x:Name="Lbl_Orientation"/>
    </VerticalStackLayout>
</ContentPage>